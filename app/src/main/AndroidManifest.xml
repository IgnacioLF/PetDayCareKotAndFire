<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petdaycarekotandfire">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetDayCareKotAndFire">
        <activity
            android:name=".Newpet"
            android:exported="false"
            android:label="Nueva Mascota"
            android:parentActivityName=".Listado"/>
        <activity
            android:name=".Editpet"
            android:exported="false"
            android:label="Editar Mascota"
            android:parentActivityName=".Listado"/>
        <activity
            android:name=".Listado"
            android:exported="false"
            android:label="Listado de Mascotas"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>